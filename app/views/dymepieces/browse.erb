<% if @current_user && @current_user.valid? %>
	<h3>Welcome <%= @current_user.username.capitalize %>!</h3>
  <ul class="nav nav-pills nav-stacked">
	 <li class="active"><a href="/dymepieces/new">Make a DymePiece</a></li>
	 <li><a href="/users/profile/<%= @current_user.id %>">My DymePieces</a></li>
	 <li><a href="/users/session/logged_out">Log out</a></li>
   <li><a href="mailto:?subject=You have been invited to Dyme&body=Signup for an account on Dyme and checkout some of my top 10 favourite things (we call these lists DymePieces). You can view tons of other DymePieces, comment on friends' choices, and create your own DymePieces. Give it a whirl at www.Dyme.com">Invite a friend</a></li>
  </ul>
	<% else %>
	<a href="/users/signup">Signup here!</a>
	<a href="/users/login">Log in</a>
<% end %>

<% @dymepieces.reverse.each do |dymepiece| %>
  <div class="dymepiece">
    <h3><a href="/dymepieces/<%= dymepiece.id %>"><%= dymepiece.topic %></a></h3>

 	  <p><small>Uploaded by: <%= User.find(dymepiece.user.id).username %></small></p>
  </div>
<% end %>
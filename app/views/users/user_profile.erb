<div class="jumbotron" id="menu">
<% if @current_user && @current_user.valid? %>
  <h2><%= @user.username %>'s DymePieces</h2>
  <p><a href="/dymepieces" class="btn btn-primary btn-lg">Browse DymePieces</a>
  <a href="/users/profile/<%= @current_user.id %>" class="btn btn-primary btn-lg" role="button">My DymePieces</a>
  <a href="/users/session/logged_out" class="btn btn-primary btn-lg" role="button">Log out</a>

   <a style="strong" class="label label-success" href="mailto:?subject=You have been invited to Dyme&body=Signup for an account on Dyme and checkout some of my top 10 favourite things (we call these lists DymePieces). You can view tons of other DymePieces, comment on friends' choices, and create your own DymePieces. Give it a whirl at www.Dyme.com">Invite a friend</a></p>
  
  <% else %>
  <p><a href="/users/signup" class="btn btn-primary btn-lg" role="button">Signup here!</a>
  <a href="/users/login" class="btn btn-primary btn-lg" role="button">Log in</a></p>
</div>
<% end %>
</div>

<% @dymepieces.reverse.each do |dymepiece| %>
  <div class="dymepiece">
    <h3><a href="/dymepieces/<%= dymepiece.id %>"><%= dymepiece.topic %></a></h3>
  </div>

  <form action='/dymepieces/delete/<%= dymepiece.id %>', method='post'>
    <div>
    <input type="submit" value="Delete">
  </div>
</form>
<% end %>
 
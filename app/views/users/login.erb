  <% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your info, please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |user| %>
        <li><%= user %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action='/users/login', method='post'>
  <div>
    <label>Email:</label>
    <input type="text" name="email" value="<%= @user && @user.email %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password" value="<%= @user && @user.password %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>

</form>